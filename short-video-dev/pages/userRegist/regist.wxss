/**index.wxss**/

.login-img{
  width: 750rpx;
}

/*表单内容*/

.inputView{
  background-color: white;
  line-height: 45px;
}

/*输入框*/

.nameImage{
  margin-left: 22px;
  width: 20px;
  height: 20px;
}

.keyImage{
  margin-top: 10px;
  margin-left: 22px;
  width: 20px;
  height: 20px;
}

.loginLabel{
  /*margin:依次对应上右下左*/
  margin: 15px 15px 15px 10px;
  color: gray;
  font-size: 15px;
}

.inputText{
  /*控件向右，文字右对齐*/
  float: right;
  text-align: right;
  margin-right: 22px;
  margin-top: 11px;
  font-size: 15px;
}

/*分割线*/
.line{
  width: 100%;
  height: 1px;
  background-color: gainsboro;
  margin-top: 1px;
}

/*按钮*/
.loginBtn {
    width: 80%;
    margin-top: 35px;
}

.goLoginBtn {
    width: 80%;
    margin-top: 15px;
}